  <div class="row">
      <div class="col-md-4" style="width:45%">
          <form method="post">
              <div></div> 
              <div class="form-group mb-1">
                  <label></label> 
                  <textarea class="form-control w-100" rows="10" placeholder="Enter text here..." id="reviewTextArea" maxlength="500" style="resize:none"></textarea>
                  <div id="charCount"></div>
                  <span></span>
              </div>
              <div class="form-group mt-2">
                  <input type="submit" value="Submit" class="btn btn-primary" />
              </div>
          </form>


      </div>
  </div>



  <script>
      const textarea = document.getElementById("reviewTextArea");
      const charCount = document.getElementById("charCount");
      const maxChars = 500;

      // Display initial "characters remaining" indicator
      const remainingChars = maxChars - textarea.value.length;
      charCount.textContent = `${remainingChars} characters remaining`;

      // Attach event listener to update indicator on input
      textarea.addEventListener("input", function() {
        const remainingChars = maxChars - textarea.value.length;
        charCount.textContent = `${remainingChars} characters remaining`;
      });
  </script>